    "mongoose": "^5.7.5",
    "mongoose-lean-id": "^0.1.0",
    "mssql": "^4.1.0",
    "schemaglue": "^4.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "dotenv-cli": "1.4.0",
    "graphql-cli": "2.16.4",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "rimraf": "2.6.2",
    "ts-node": "7.0.0",
    "typescript": "2.9.2"
  }
